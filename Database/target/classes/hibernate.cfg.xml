<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd"> 
    
<hibernate-configuration>
    <session-factory>        
        <property name="connection.driver_class">org.hibernate.dialect.H2Dialect</property> 
         <property name="connection.url">jdbc:h2:tcp://localhost/~/manageproduct</property> 
         <property name="connection.username">sa</property> 
         <property name="connection.password"></property> 
                
        <mapping class="com.niit.database.model.Product" />
         <mapping class="com.niit.database.model.Registration" />
          <mapping class="com.niit.database.model.Role" />
           <mapping class="com.niit.database.model.Login" />
         
          
        
    </session-factory>         
</hibernate-configuration>